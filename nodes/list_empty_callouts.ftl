        </div>
    </div>

    <div class="guide-callout last">
        <div class="guide-callout-header">
            <small><@trans  key="thub.guide.list.box3_Title" default="Create Users"/></small>
        </div>
        <a href="<@url name="admin:users:new"/>" class="guide-icon-anchor">
            <h1><i class="icon-user"></i></h1>
        </a>
        <div class="guide-callout-text">
            <a href="<@url name="admin:users:new"/>">
                <@trans key="thub.guide.list.box3_text" default="Invite some users to your site. We'll email them for you!"/>
            </a>
        </div>
