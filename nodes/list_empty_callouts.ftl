<div class="guide-callout-container">
    <div class="guide-callout">
        <div class="guide-callout-header">
            <small><@trans  key="thub.guide.list.box1_Title" default="Setup Spaces"/></small>
        </div>
        <a href="<@url name="admin:spaces:index"/>" class="guide-icon-anchor">
            <h1><i class="icon-folder-open"></i></h1>
        </a>
        <div class="guide-callout-text">
            <a href="<@url name="admin:spaces:index"/>">
                <@trans key="thub.guide.list.box1_text" default="Spaces are a great way to segment content along departments or product lines.  Set permissions to limit content to different groups."/>
            </a>
        </div>
    </div>

    <div class="guide-callout">
        <div class="guide-callout-header">
            <small><@trans  key="thub.guide.list.box2_Title" default="Create Topics"/></small>
        </div>
        <a href="<@url name="admin:content:management"/>?contentTypeFilter=topic" class="guide-icon-anchor">
            <h1><i class="icon-tag"></i></h1>
        </a>
        <div class="guide-callout-text">
            <a href="<@url name="admin:content:management"/>?contentTypeFilter=topic">
